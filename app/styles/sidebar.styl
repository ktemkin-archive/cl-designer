#sidebar
  position absolute
  width 250px
  height auto
  margin 0px
  padding 0px
  top 36px
  right 0px
  bottom 0px
  left auto
  text-align center
  overflow-y auto

  background-color #f4f4f4
  padding 10px
  border-left 1px solid #777
  box-shadow -4px -2px 4px -3px #aaa


.truthtable
  margin-left auto
  margin-right auto
  
  font-family monospace
  border-collapse collapse
  font-size 16px

  td, th
    padding 6px
    text-align center

  .output
    padding-left 12px
    border-left 1px solid #000


.truthtable th
    border-bottom: 1px solid #000;
